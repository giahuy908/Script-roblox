----------------------------------------------------
-- ğŸª™ AUTO MONEY SYSTEM
----------------------------------------------------

local AutoMoneyEnabled = false
local Delay = 2
local TargetName = ""

MainTab:AddInput("TargetNameInput", {
	Title = "ğŸ‘¤ Nháº­p tÃªn ngÆ°á»i chÆ¡i",
	Default = "",
	Placeholder = "VD: Legiahuy",
}):OnChanged(function(Value)
	TargetName = Value
end)

MainTab:AddInput("DelayInput", {
	Title = "â±ï¸ Delay má»—i láº§n (giÃ¢y)",
	Default = "2",
	Placeholder = "VD: 1.5, 2, 5...",
	Numeric = true
}):OnChanged(function(Value)
	local num = tonumber(Value)
	if num and num > 0 then
		Delay = num
	end
end)

MainTab:AddToggle("AutoMoneyToggle", {
	Title = "ğŸ’¸ Auto Cá»™ng Tiá»n",
	Default = false
}):OnChanged(function(Value)
	AutoMoneyEnabled = Value
	if Value then
		task.spawn(function()
			while AutoMoneyEnabled do
				pcall(function()
					if TargetName ~= "" then
						local target = game:GetService("Players"):FindFirstChild(TargetName)
						if target then
							local args = { target }
							game:GetService("ReplicatedStorage"):WaitForChild("RestartRemotes"):WaitForChild("GiveClaimMoney"):FireServer(unpack(args))
							Library:Notify({
								Title = "ğŸ’° Cá»™ng tiá»n",
								Content = "ÄÃ£ gá»­i tiá»n cho: " .. TargetName,
								Duration = 2
							})
						else
							Library:Notify({
								Title = "âš ï¸ Lá»—i",
								Content = "KhÃ´ng tÃ¬m tháº¥y ngÆ°á»i chÆ¡i: " .. TargetName,
								Duration = 2
							})
						end
					else
						Library:Notify({
							Title = "âš ï¸ Nháº­p tÃªn!",
							Content = "Báº¡n cáº§n nháº­p tÃªn ngÆ°á»i chÆ¡i trÆ°á»›c.",
							Duration = 2
						})
					end
				end)
				task.wait(Delay)
			end
		end)
	end
end)

----------------------------------------------------
-- ğŸ›¡ï¸ ANTI SLAP (SLAP TOWER)
----------------------------------------------------

local AntiSlapEnabled = false

local function EnableAntiSlap()
	local player = game.Players.LocalPlayer
	local char = player.Character or player.CharacterAdded:Wait()
	local hum = char:WaitForChild("Humanoid")
	local hrp = char:WaitForChild("HumanoidRootPart")

	-- Chá»‘ng lá»±c Ä‘áº©y
	for _, v in pairs(char:GetDescendants()) do
		if v:IsA("BodyVelocity") or v:IsA("BodyThrust") or v:IsA("BodyForce") then
			v:Destroy()
		end
	end

	-- Táº¯t ragdoll, fall
	hum:SetStateEnabled(Enum.HumanoidStateType.Ragdoll, false)
	hum:SetStateEnabled(Enum.HumanoidStateType.FallingDown, false)
	hum.PlatformStand = false

	-- Giá»¯ yÃªn vá»‹ trÃ­ (náº¿u bá»‹ knock)
	task.spawn(function()
		while AntiSlapEnabled and hum and hum.Health > 0 do
			pcall(function()
				if hrp and hrp:FindFirstChildOfClass("BodyVelocity") then
					hrp:FindFirstChildOfClass("BodyVelocity"):Destroy()
				end
				hum:ChangeState(Enum.HumanoidStateType.Running)
				hum.PlatformStand = false
			end)
			task.wait(0.2)
		end
	end)
end

MainTab:AddToggle("AntiSlapToggle", {
	Title = "ğŸ›¡ï¸ Anti Slap (Chá»‘ng háº¥t vÄƒng)",
	Default = false
}):OnChanged(function(Value)
	AntiSlapEnabled = Value
	if Value then
		Library:Notify({
			Title = "ğŸ›¡ï¸ Anti Slap",
			Content = "ÄÃ£ báº­t chá»‘ng háº¥t vÄƒng!",
			Duration = 3
		})
		EnableAntiSlap()
	else
		Library:Notify({
			Title = "ğŸ›¡ï¸ Anti Slap",
			Content = "ÄÃ£ táº¯t chá»‘ng háº¥t vÄƒng.",
			Duration = 3
		})
	end
end)

